---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar';
import Footer from '../../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import type { ui } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'ko' } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const jsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebSite",
            "name": "MediaTools",
            "url": "https://getmediatools.com",
            "description": "Free online tools to download videos from TikTok, Twitter, and Facebook. Extract audio to MP3 and grab thumbnails.",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "https://getmediatools.com/?q={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        },
        {
            "@type": "Organization",
            "name": "MediaTools",
            "url": "https://getmediatools.com",
            "logo": "https://getmediatools.com/icon-512.png",
            "description": "Free online tools to download videos, extract audio, and grab thumbnails from social media platforms.",
            "sameAs": []
        }
    ]
};
---

<Layout 
    title={t("index.meta.title")}
    description={t("index.meta.desc")}
    jsonLd={jsonLd}
>
    <Navbar client:idle currentPage="home" lang={lang as keyof typeof ui} />
    
    <main class="container mx-auto px-4 pt-10 pb-16">
        <!-- Hero Section -->
        <div class="text-center mb-12 max-w-3xl mx-auto">
            <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
                {t("index.hero.title")}<span class="bg-gradient-to-r from-primary to-purple-500 bg-clip-text text-transparent">{t("index.hero.highlight")}</span>
            </h1>
            <p class="text-lg text-muted-foreground">
                {t("index.hero.desc")}
            </p>
        </div>

        <!-- Tools Grid -->
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 max-w-4xl mx-auto">
            
            <!-- TikTok Downloader -->
            <a href={lang === 'en' ? '/tiktok-downloader/' : `/${lang}/tiktok-downloader/`} class="group block p-6 rounded-xl border bg-card hover:border-primary/50 hover:shadow-lg transition-all">
