---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';

const jsonLd = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "MediaTools",
    "url": "https://getmediatools.com",
    "description": "Free online tools to download videos from TikTok, Twitter, and Facebook. Extract audio to MP3 and grab thumbnails.",
    "potentialAction": {
        "@type": "SearchAction",
        "target": "https://getmediatools.com/?q={search_term_string}",
        "query-input": "required name=search_term_string"
    }
};
