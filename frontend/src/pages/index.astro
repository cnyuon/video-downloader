---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import VideoDownloader from '../components/VideoDownloader';
---

<Layout title="Video Downloader - MediaTools">
    <Navbar client:load currentPage="video" />
    
    <main class="container mx-auto px-4 pt-10 pb-4 max-w-2xl">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold tracking-tight mb-2">
                Download Videos
            </h1>
            <p class="text-muted-foreground">
                Download videos from TikTok, YouTube, X/Twitter, and Facebook. TikTok videos are watermark-free.
            </p>
        </div>

        <VideoDownloader client:load />
    </main>

    <!-- Supported Platforms -->
    <div class="py-10 text-center border-t" id="platforms-section">
        <p class="text-sm text-muted-foreground mb-6">Supported Platforms</p>
        <div class="flex justify-center items-center gap-8 flex-wrap max-w-xl mx-auto">
            <!-- TikTok -->
            <div class="flex flex-col items-center gap-2">
                <div class="w-10 h-10 rounded-lg badge-tiktok flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"></path>
                    </svg>
                </div>
                <span class="text-xs font-medium">TikTok</span>
            </div>
            <!-- YouTube -->
            <div class="flex flex-col items-center gap-2">
                <div class="w-10 h-10 rounded-lg bg-red-600 flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"></path>
                    </svg>
                </div>
                <span class="text-xs font-medium">YouTube</span>
            </div>
            <!-- Twitter/X -->
            <div class="flex flex-col items-center gap-2">
                <div class="w-10 h-10 rounded-lg bg-black flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
                    </svg>
                </div>
                <span class="text-xs font-medium">X / Twitter</span>
            </div>
            <!-- Facebook -->
            <div class="flex flex-col items-center gap-2">
                <div class="w-10 h-10 rounded-lg bg-blue-600 flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
                    </svg>
                </div>
                <span class="text-xs font-medium">Facebook</span>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="py-16 bg-muted/30 border-t">
        <div class="container mx-auto px-4 max-w-3xl">
            <h2 class="text-2xl font-bold text-center mb-8">FAQ</h2>
            
            <div class="space-y-6">
                <!-- FAQ 1 -->
                <div class="bg-card rounded-lg border p-6 shadow-sm">
                    <h3 class="font-semibold text-lg mb-2">Are TikTok videos watermark-free?</h3>
                    <p class="text-muted-foreground">Yes! Our downloader automatically removes the TikTok watermark, giving you the clean original video.</p>
                </div>

                <!-- FAQ 2 -->
                <div class="bg-card rounded-lg border p-6 shadow-sm">
                    <h3 class="font-semibold text-lg mb-2">How do I get a video transcript?</h3>
                    <p class="text-muted-foreground">Go to "Transcript" and paste a YouTube URL. Note: The video must have subtitles or auto-generated captions available.</p>
                </div>
                
                <!-- FAQ 3 -->
                <div class="bg-card rounded-lg border p-6 shadow-sm">
                    <h3 class="font-semibold text-lg mb-2">Can I use this on my phone?</h3>
                    <p class="text-muted-foreground">Absolutely! The site is fully mobile-responsive and works great on iOS and Android devices.</p>
                </div>

                <!-- FAQ 4 -->
                <div class="bg-card rounded-lg border p-6 shadow-sm">
                    <h3 class="font-semibold text-lg mb-2">Do you support bulk downloads?</h3>
                    <p class="text-muted-foreground">Yes! We're actively working on bulk/playlist download support and it will be available soon.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-t py-6">
        <div class="text-center text-sm text-muted-foreground">
            <p>Â© 2026 MediaTools</p>
        </div>
    </footer>
</Layout>
