---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';

const allBlogPosts = await getCollection('blog');
const sortedPosts = allBlogPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Category helper
const CATEGORY_LABELS: Record<string, string> = {
    'vpn': 'Privacy & VPN',
    'software': 'Video Editing',
    'hosting': 'Creator Tech',
    'storage': 'Storage',
    'creator-tools': 'Growth Tools',
    'none': 'Guide'
};

function getCategoryLabel(slug: string | undefined): string {
    return slug && CATEGORY_LABELS[slug] ? CATEGORY_LABELS[slug] : 'Guide';
}
---

<Layout 
    title="Blog - MediaTools | Tips, Guides, and Updates"
    description="Learn how to download videos, extract audio, and make the most of free online media tools. Get guides, tips, release notes, and more."
>
    <!-- Target Keywords: video downloading tips, tiktok download guide, remove watermarks, free online tools blog -->
    <Navbar client:load currentPage="blog" />
    
    <main class="container mx-auto px-4 pt-10 pb-16 max-w-6xl">
        <div class="text-center mb-16">
            <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
                MediaTools Blog
            </h1>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Discover tips and tricks for content creation, video downloading, and social media growth.
            </p>
        </div>
        
        <!-- Category Filter (Visual only for now) -->
        <div class="flex flex-wrap justify-center gap-2 mb-12">
            <button class="px-4 py-2 rounded-full bg-primary text-primary-foreground text-sm font-medium">All Posts</button>
            <button class="px-4 py-2 rounded-full bg-muted hover:bg-muted/80 text-sm font-medium transition-colors">TikTok Guides</button>
            <button class="px-4 py-2 rounded-full bg-muted hover:bg-muted/80 text-sm font-medium transition-colors">Creator Tools</button>
            <button class="px-4 py-2 rounded-full bg-muted hover:bg-muted/80 text-sm font-medium transition-colors">Video Editing</button>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {sortedPosts.map((post) => (
                <article class="group bg-card rounded-2xl border shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 h-full flex flex-col overflow-hidden">
                    <a href={`/blog/${post.slug}`} class="block w-full aspect-video overflow-hidden bg-muted">
                        {post.data.heroImage ? (
                            <img 
                                src={post.data.heroImage} 
                                alt={post.data.title} 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" 
                            />
                        ) : (
                            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900">
                                <span class="text-4xl">ðŸ“„</span>
                            </div>
                        )}
                    </a>
                    <div class="p-6 flex-1 flex flex-col">
                        <div class="flex items-center justify-between mb-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary text-secondary-foreground">
                                {getCategoryLabel(post.data.monetization?.primary_category)}
                            </span>
                        </div>
                        
                        <h2 class="text-xl font-bold mb-3 line-clamp-2 group-hover:text-primary transition-colors">
                            <a href={`/blog/${post.slug}`}>
                                {post.data.title}
                            </a>
                        </h2>
                        
                        <p class="text-muted-foreground mb-6 line-clamp-3 flex-1 text-sm leading-relaxed">
                            {post.data.description}
                        </p>
                        
                        <a href={`/blog/${post.slug}`} class="inline-flex items-center text-primary font-semibold text-sm group/link">
                            Read Article
                            <svg class="w-4 h-4 ml-1 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </a>
                    </div>
                </article>
            ))}
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-t py-8 mt-8">
        <div class="text-center text-sm text-muted-foreground">
            <p>Â© 2026 MediaTools. All rights reserved.</p>
        </div>
    </footer>
</Layout>
