---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';

const allBlogPosts = await getCollection('blog');
const sortedPosts = allBlogPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout 
    title="Blog - MediaTools | Tips, Guides, and Updates"
    description="Learn how to download videos, extract audio, and make the most of free online media tools. Get guides, tips, release notes, and more."
>
    <!-- Target Keywords: video downloading tips, tiktok download guide, remove watermarks, free online tools blog -->
    <Navbar client:load currentPage="blog" />
    
    <main class="container mx-auto px-4 pt-10 pb-16 max-w-4xl">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold tracking-tight mb-4">
                MediaTools Blog
            </h1>
            <p class="text-lg text-muted-foreground">
                Tips, guides, and updates for content creators and downloaders.
            </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {sortedPosts.map((post) => (
                <div class="bg-card rounded-xl border shadow-sm hover:shadow-lg transition-all h-full flex flex-col">
                    {post.data.heroImage && (
                        <div class="w-full aspect-video rounded-t-xl overflow-hidden">
                            <img src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover" />
                        </div>
                    )}
                    <div class="p-6 flex-1 flex flex-col">
                        <div class="text-sm text-muted-foreground mb-2">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString('en-us', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric',
                                })}
                            </time>
                        </div>
                        <h2 class="text-xl font-semibold mb-2 line-clamp-2">
                            <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                                {post.data.title}
                            </a>
                        </h2>
                        <p class="text-muted-foreground mb-4 line-clamp-3 flex-1">
                            {post.data.description}
                        </p>
                        <a href={`/blog/${post.slug}`} class="inline-flex items-center text-primary hover:underline font-medium mt-auto">
                            Read more
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-t py-8 mt-8">
        <div class="text-center text-sm text-muted-foreground">
            <p>Â© 2026 MediaTools. All rights reserved.</p>
        </div>
    </footer>
</Layout>
