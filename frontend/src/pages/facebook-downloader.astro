---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import VideoDownloader from '../components/VideoDownloader';
import { ui } from '../i18n/ui';

const lang = 'en';

const jsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebApplication",
            "name": "Facebook Video Downloader",
            "url": "https://getmediatools.com/facebook-downloader",
            "description": ui.en['fb.meta.desc'],
            "applicationCategory": "MultimediaApplication",
            "operatingSystem": "Any",
            "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
        },
        {
            "@type": "HowTo",
            "name": ui.en['fb.howto.title'],
            "description": ui.en['fb.howto.desc'],
            "step": [
                { "@type": "HowToStep", "position": 1, "name": ui.en['fb.howto.step1.title'], "text": ui.en['fb.howto.step1.desc'] },
                { "@type": "HowToStep", "position": 2, "name": ui.en['fb.howto.step2.title'], "text": ui.en['fb.howto.step2.desc'] },
                { "@type": "HowToStep", "position": 3, "name": ui.en['fb.howto.step3.title'], "text": ui.en['fb.howto.step3.desc'] }
            ]
        },
        {
            "@type": "FAQPage",
            "mainEntity": [
                { "@type": "Question", "name": ui.en['fb.faq.q1'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['fb.faq.a1'] } },
                { "@type": "Question", "name": ui.en['fb.faq.q2'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['fb.faq.a2'] } },
                { "@type": "Question", "name": ui.en['fb.faq.q3'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['fb.faq.a3'] } },
                { "@type": "Question", "name": ui.en['fb.faq.q4'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['fb.faq.a4'] } },
                { "@type": "Question", "name": ui.en['fb.faq.q5'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['fb.faq.a5'] } }
            ]
        }
    ]
};
---

<Layout 
    title={ui.en['fb.meta.title']}
    description={ui.en['fb.meta.desc']}
    jsonLd={jsonLd}
>
    <!-- Target Keywords: facebook video downloader, download facebook video, save fb video, facebook reels downloader, fb video saver -->
    <Navbar client:idle currentPage="facebook" lang={lang as keyof typeof ui} />
    
    <main class="container mx-auto px-4 pt-10 pb-4 max-w-2xl">
        <div class="text-center mb-8">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-600 text-white text-sm font-medium mb-4">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                {ui.en['fb.hero.badge']}
            </div>
            <h1 class="text-4xl font-bold tracking-tight mb-3">
                {ui.en['fb.hero.title']}
            </h1>
            <p class="text-lg text-muted-foreground max-w-xl mx-auto" set:html={ui.en['fb.hero.desc']} />
        </div>

        <VideoDownloader 
            client:load 
            placeholder={ui.en['fb.input.placeholder']} 
            allowedPlatform="facebook" 
            buttonGetVideo={ui.en['btn.get_video']}
            buttonDownloading={ui.en['btn.downloading']}
            buttonDownload={ui.en['btn.download_video']}
        />
        
        <!-- Features Section -->
        <div class="mt-12 grid gap-4 md:grid-cols-3">
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸŽ¬</div>
                <h3 class="font-semibold mb-1">{ui.en['fb.features.hd.title']}</h3>
                <p class="text-sm text-muted-foreground">{ui.en['fb.features.hd.desc']}</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸ“±</div>
                <h3 class="font-semibold mb-1">{ui.en['fb.features.reels.title']}</h3>
                <p class="text-sm text-muted-foreground">{ui.en['fb.features.reels.desc']}</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸ”’</div>
                <h3 class="font-semibold mb-1">{ui.en['fb.features.nologin.title']}</h3>
                <p class="text-sm text-muted-foreground">{ui.en['fb.features.nologin.desc']}</p>
            </div>
        </div>
        
        <!-- How To Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-2">{ui.en['fb.howto.title']}</h2>
            <p class="text-center text-muted-foreground mb-6 max-w-lg mx-auto">{ui.en['fb.howto.desc']}</p>
            <div class="space-y-4">
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">1</div>
                    <div>
                        <h3 class="font-semibold">{ui.en['fb.howto.step1.title']}</h3>
                        <p class="text-muted-foreground text-sm">{ui.en['fb.howto.step1.desc']}</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">2</div>
                    <div>
                        <h3 class="font-semibold">{ui.en['fb.howto.step2.title']}</h3>
                        <p class="text-muted-foreground text-sm">{ui.en['fb.howto.step2.desc']}</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">3</div>
                    <div>
                        <h3 class="font-semibold">{ui.en['fb.howto.step3.title']}</h3>
                        <p class="text-muted-foreground text-sm">{ui.en['fb.howto.step3.desc']}</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- FAQ Section for SEO -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">{ui.en['fb.faq.title']}</h2>
            <div class="space-y-4">
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['fb.faq.q1']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.faq.a1']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['fb.faq.q2']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.faq.a2']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['fb.faq.q3']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.faq.a3']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['fb.faq.q4']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.faq.a4']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['fb.faq.q5']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.faq.a5']}</p>
                </div>
            </div>
        </div>

        <!-- Related Guides Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">{ui.en['fb.guides.title']}</h2>
            <div class="grid gap-4 md:grid-cols-2">
                <a href={lang === 'en' ? '/tiktok-downloader' : `/${lang}/tiktok-downloader`} class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">{ui.en['fb.guides.1.title']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.guides.1.desc']}</p>
                </a>
                <a href={lang === 'en' ? '/twitter-downloader' : `/${lang}/twitter-downloader`} class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">{ui.en['fb.guides.2.title']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['fb.guides.2.desc']}</p>
                </a>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
