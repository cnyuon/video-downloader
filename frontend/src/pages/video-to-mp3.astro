---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import AudioExtractor from '../components/AudioExtractor';

const jsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebApplication",
            "name": "Video to MP3 Converter",
            "url": "https://getmediatools.com/video-to-mp3",
            "description": "Convert video to MP3 online for free. Extract high-quality audio from TikTok, Twitter, and Facebook videos instantly.",
            "applicationCategory": "MultimediaApplication",
            "operatingSystem": "Any",
            "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
        },
        {
            "@type": "FAQPage",
            "mainEntity": [
                { "@type": "Question", "name": "What video formats are supported?", "acceptedAnswer": { "@type": "Answer", "text": "Our tool works with videos from TikTok, Twitter/X, and Facebook. Just paste the video URL and we extract the audio automatically." } },
                { "@type": "Question", "name": "What audio quality do I get?", "acceptedAnswer": { "@type": "Answer", "text": "We extract the best available audio quality. Most social media videos produce MP3 files at 128-320kbps, suitable for listening on any device." } },
                { "@type": "Question", "name": "Can I use this on my phone?", "acceptedAnswer": { "@type": "Answer", "text": "Yes! Our converter works in any mobile browser on iPhone or Android. No app download needed." } }
            ]
        }
    ]
};
