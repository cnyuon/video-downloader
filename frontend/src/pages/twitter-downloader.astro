---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import VideoDownloader from '../components/VideoDownloader';
import { ui } from '../i18n/ui';

const lang = 'en';

const jsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebApplication",
            "name": "Twitter/X Video Downloader",
            "url": "https://getmediatools.com/twitter-downloader",
            "description": ui.en['tw.meta.desc'],
            "applicationCategory": "MultimediaApplication",
            "operatingSystem": "Any",
            "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
            "aggregateRating": { "@type": "AggregateRating", "ratingValue": "4.7", "ratingCount": "1120", "bestRating": "5", "worstRating": "1" }
        },
        {
            "@type": "FAQPage",
            "mainEntity": [
                { "@type": "Question", "name": ui.en['tw.faq.q1'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['tw.faq.a1'] } },
                { "@type": "Question", "name": ui.en['tw.faq.q2'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['tw.faq.a2'] } },
                { "@type": "Question", "name": ui.en['tw.faq.q3'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['tw.faq.a3'] } },
                { "@type": "Question", "name": ui.en['tw.faq.q4'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['tw.faq.a4'] } },
                { "@type": "Question", "name": ui.en['tw.faq.q5'], "acceptedAnswer": { "@type": "Answer", "text": ui.en['tw.faq.a5'] } }
            ]
        }
    ]
};
---

<Layout 
    title={ui.en['tw.meta.title']}
    description={ui.en['tw.meta.desc']}
    jsonLd={jsonLd}
>
    <!-- Target Keywords: twitter video downloader, download twitter video, save twitter video mp4, twitter gif downloader, x video downloader -->
    <Navbar client:idle currentPage="twitter" lang={lang as keyof typeof ui} />
    
    <main class="container mx-auto px-4 pt-10 pb-4 max-w-2xl">
        <div class="text-center mb-8">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-black text-white text-sm font-medium mb-4">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                {ui.en['tw.hero.badge']}
            </div>
            <h1 class="text-4xl font-bold tracking-tight mb-3">
                {ui.en['tw.hero.title']}
            </h1>
            <p class="text-lg text-muted-foreground max-w-xl mx-auto" set:html={ui.en['tw.hero.desc']} />
        </div>

        <VideoDownloader 
            client:load 
            placeholder={ui.en['tw.input.placeholder']} 
            allowedPlatform="twitter" 
            buttonGetVideo={ui.en['btn.get_video']}
            buttonDownloading={ui.en['btn.downloading']}
            buttonDownload={ui.en['btn.download_video']}
        />
        
        <!-- Features Section -->
        <div class="mt-12 grid gap-4 md:grid-cols-3">
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸ“¹</div>
                <h3 class="font-semibold mb-1">{ui.en['tw.features.mp4.title']}</h3>
                <p class="text-sm text-muted-foreground">{ui.en['tw.features.mp4.desc']}</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸ”„</div>
                <h3 class="font-semibold mb-1">{ui.en['tw.features.gif.title']}</h3>
                <p class="text-sm text-muted-foreground">{ui.en['tw.features.gif.desc']}</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸŽ¬</div>
                <h3 class="font-semibold mb-1">{ui.en['tw.features.hd.title']}</h3>
                <p class="text-sm text-muted-foreground">{ui.en['tw.features.hd.desc']}</p>
            </div>
        </div>
        
        <!-- How To Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-2">{ui.en['tw.howto.title']}</h2>
            <p class="text-center text-muted-foreground mb-6 max-w-lg mx-auto">{ui.en['tw.howto.desc']}</p>
            <div class="space-y-4">
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">1</div>
                    <div>
                        <h3 class="font-semibold">{ui.en['tw.howto.step1.title']}</h3>
                        <p class="text-muted-foreground text-sm">{ui.en['tw.howto.step1.desc']}</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">2</div>
                    <div>
                        <h3 class="font-semibold">{ui.en['tw.howto.step2.title']}</h3>
                        <p class="text-muted-foreground text-sm">{ui.en['tw.howto.step2.desc']}</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">3</div>
                    <div>
                        <h3 class="font-semibold">{ui.en['tw.howto.step3.title']}</h3>
                        <p class="text-muted-foreground text-sm">{ui.en['tw.howto.step3.desc']}</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- FAQ Section for SEO -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">{ui.en['tw.faq.title']}</h2>
            <div class="space-y-4">
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['tw.faq.q1']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.faq.a1']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['tw.faq.q2']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.faq.a2']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['tw.faq.q3']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.faq.a3']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['tw.faq.q4']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.faq.a4']}</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">{ui.en['tw.faq.q5']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.faq.a5']}</p>
                </div>
            </div>
        </div>

        <!-- Related Guides Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">{ui.en['tw.guides.title']}</h2>
            <div class="grid gap-4 md:grid-cols-2">
                <a href={lang === 'en' ? '/blog/5-best-ways-to-save-twitter-videos' : `/${lang}/blog/5-best-ways-to-save-twitter-videos`} class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">{ui.en['tw.guides.1.title']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.guides.1.desc']}</p>
                </a>
                <a href={lang === 'en' ? '/tiktok-downloader' : `/${lang}/tiktok-downloader`} class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">{ui.en['tw.guides.2.title']}</h3>
                    <p class="text-sm text-muted-foreground">{ui.en['tw.guides.2.desc']}</p>
                </a>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
