---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import ThumbnailGrabberComponent from '../components/ThumbnailGrabber';

const jsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebApplication",
            "name": "Video Thumbnail Downloader",
            "url": "https://getmediatools.com/thumbnail-grabber",
            "description": "Download video thumbnails in high quality from TikTok, Twitter, and Facebook videos instantly.",
            "applicationCategory": "MultimediaApplication",
            "operatingSystem": "Any",
            "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
        },
        {
            "@type": "FAQPage",
            "mainEntity": [
                { "@type": "Question", "name": "What resolution are the thumbnails?", "acceptedAnswer": { "@type": "Answer", "text": "We grab the highest resolution thumbnail available from the platform, typically 720p or 1080p depending on the original video quality." } },
                { "@type": "Question", "name": "What format do thumbnails download in?", "acceptedAnswer": { "@type": "Answer", "text": "Thumbnails are downloaded as JPEG or PNG images, depending on what the platform provides. Both formats work on all devices." } },
                { "@type": "Question", "name": "Can I use thumbnails for my own videos?", "acceptedAnswer": { "@type": "Answer", "text": "If you're downloading thumbnails from your own videos, absolutely. For other creators' content, please respect copyright and use thumbnails only for personal reference." } }
            ]
        }
    ]
};
---

<Layout 
    title="Video Thumbnail Downloader - Grab HD Thumbnails | MediaTools"
    description="Download video thumbnails in high quality. Get thumbnails from TikTok, Twitter, and Facebook videos instantly. Free online tool, no signup."
    jsonLd={jsonLd}
>
    <Navbar client:load currentPage="thumbnail" />
    
    <main class="container mx-auto px-4 pt-10 pb-4 max-w-2xl">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold tracking-tight mb-2">
                Video Thumbnail Downloader
            </h1>
            <p class="text-muted-foreground">
                Download the thumbnail image from any video in high quality.
            </p>
            
            <!-- Supported Platforms -->
            <div class="flex items-center justify-center gap-3 mt-4">
                <span class="text-sm text-muted-foreground">Works with:</span>
                <div class="flex items-center gap-2">
                    <!-- TikTok -->
                    <div class="w-6 h-6 rounded bg-gradient-to-r from-[#ff0050] to-[#00f2ea] flex items-center justify-center" title="TikTok">
                        <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                        </svg>
                    </div>
                    <!-- Twitter/X -->
                    <div class="w-6 h-6 rounded bg-black flex items-center justify-center" title="Twitter/X">
                        <svg class="w-3.5 h-3.5 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                    </div>
                    <!-- Facebook -->
                    <div class="w-6 h-6 rounded bg-blue-600 flex items-center justify-center" title="Facebook">
                        <svg class="w-3.5 h-3.5 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <ThumbnailGrabberComponent client:load />

        <!-- Features Section -->
        <div class="mt-12 grid gap-4 md:grid-cols-3">
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">üñºÔ∏è</div>
                <h3 class="font-semibold mb-1">HD Quality</h3>
                <p class="text-sm text-muted-foreground">Get the highest resolution thumbnail available</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">‚ö°</div>
                <h3 class="font-semibold mb-1">Instant Download</h3>
                <p class="text-sm text-muted-foreground">Grab thumbnails in seconds</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">üì±</div>
                <h3 class="font-semibold mb-1">Any Device</h3>
                <p class="text-sm text-muted-foreground">Works on iPhone, Android, PC, Mac</p>
            </div>
        </div>

        <!-- How To Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">How to Download Video Thumbnails</h2>
            <div class="space-y-4">
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">1</div>
                    <div>
                        <h3 class="font-semibold">Copy the video URL</h3>
                        <p class="text-muted-foreground text-sm">Find the video on TikTok, Twitter, or Facebook and copy its link</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">2</div>
                    <div>
                        <h3 class="font-semibold">Paste and analyze</h3>
                        <p class="text-muted-foreground text-sm">Paste the URL above and click "Get Info" to extract the thumbnail</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">3</div>
                    <div>
                        <h3 class="font-semibold">Save the image</h3>
                        <p class="text-muted-foreground text-sm">Right-click or long-press the thumbnail to save it to your device</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">Frequently Asked Questions</h2>
            <div class="space-y-4">
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">What resolution are the thumbnails?</h3>
                    <p class="text-sm text-muted-foreground">We grab the highest resolution thumbnail available from the platform, typically 720p or 1080p depending on the original video quality.</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">What format do thumbnails download in?</h3>
                    <p class="text-sm text-muted-foreground">Thumbnails are downloaded as JPEG or PNG images, depending on what the platform provides. Both formats work on all devices.</p>
                </div>
                <div class="p-4 rounded-lg bg-muted/30">
                    <h3 class="font-semibold mb-2">Can I use thumbnails for my own videos?</h3>
                    <p class="text-sm text-muted-foreground">If you're downloading thumbnails from your own videos, absolutely. For other creators' content, please respect copyright and use thumbnails only for personal reference.</p>
                </div>
            </div>
        </div>

        <!-- Related Guides Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">Related Tools</h2>
            <div class="grid gap-4 md:grid-cols-2">
                <a href="/tiktok-downloader" class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">TikTok Video Downloader ‚Üí</h3>
                    <p class="text-sm text-muted-foreground">Download full TikTok videos without watermark.</p>
                </a>
                <a href="/video-to-mp3" class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">Video to MP3 ‚Üí</h3>
                    <p class="text-sm text-muted-foreground">Extract audio from any video as MP3.</p>
                </a>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
