---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import ThumbnailGrabberComponent from '../components/ThumbnailGrabber';
---

<Layout title="Thumbnail Grabber - MediaTools">
    <Navbar client:load currentPage="thumbnail" />
    
    <main class="container mx-auto px-4 pt-10 pb-4 max-w-2xl">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold tracking-tight mb-2">
                Thumbnail Grabber
            </h1>
            <p class="text-muted-foreground">
                Download the thumbnail image from any video in high quality.
            </p>
        </div>

        <ThumbnailGrabberComponent client:load />
    </main>

    <!-- Footer -->
    <footer class="border-t py-6 mt-16">
