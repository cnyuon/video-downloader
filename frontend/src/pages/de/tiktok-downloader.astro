                <p class="text-sm text-muted-foreground">{t('tt.features.devices.desc')}</p>
            </div>
        </div>
        
        <!-- How To Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-2">{t('tt.howto.title')}</h2>
            <p class="text-center text-muted-foreground mb-6 max-w-lg mx-auto">{t('tt.howto.desc')}</p>
            <div class="space-y-4">
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">1</div>
                    <div>
                        <h3 class="font-semibold">{t('tt.howto.step1.title')}</h3>
                        <p class="text-muted-foreground text-sm">{t('tt.howto.step1.desc')}</p>
                    </div>
                </div>
                <div class="flex gap-4 items-start">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold">2</div>
                    <div>
                        <h3 class="font-semibold">{t('tt.howto.step2.title')}</h3>
                        <p class="text-muted-foreground text-sm">{t('tt.howto.step2.desc')}</p>
                    </div>
                </div>
