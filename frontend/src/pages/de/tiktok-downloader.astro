                <p class="text-sm text-muted-foreground">{t('tt.features.no_wm.desc')}</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸ“¹</div>
                <h3 class="font-semibold mb-1">{t('tt.features.hd.title')}</h3>
                <p class="text-sm text-muted-foreground">{t('tt.features.hd.desc')}</p>
            </div>
            <div class="text-center p-4 rounded-lg bg-muted/30">
                <div class="text-2xl mb-2">ðŸ“±</div>
