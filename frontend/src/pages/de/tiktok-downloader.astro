        <!-- Related Guides Section -->
        <div class="mt-12 py-8 border-t">
            <h2 class="text-2xl font-bold text-center mb-6">{t('tt.guides.title')}</h2>
            <div class="grid gap-4 md:grid-cols-2">
                <a href="/blog/how-to-download-tiktok-without-watermark" class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">{t('tt.guides.1.title')}</h3>
                    <p class="text-sm text-muted-foreground">{t('tt.guides.1.desc')}</p>
                </a>
                <a href="/blog/tiktok-banned-how-to-access-download" class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
                    <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors">{t('tt.guides.2.title')}</h3>
                    <p class="text-sm text-muted-foreground">{t('tt.guides.2.desc')}</p>
                </a>
                <a href="/blog/best-free-video-editors-tiktok" class="group p-4 rounded-xl border bg-card hover:border-primary/50 hover:shadow-md transition-all">
