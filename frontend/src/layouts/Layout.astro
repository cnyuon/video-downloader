---
import '../styles/globals.css';
import HreflangTags from '../components/i18n/HreflangTags.astro';
import LanguagePicker from '../components/i18n/LanguagePicker.astro';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
    jsonLd?: Record<string, any>;
}

const lang = getLangFromUrl(Astro.url);

const { 
    title = "MediaTools - Download Videos, Extract Audio & More",
    description = "Free online tools to download videos, extract audio, and more from TikTok, YouTube, Twitter, and Facebook.",
    ogImage = "/icon-512.png",
    jsonLd,
} = Astro.props;

// Ensure canonical URLs always have trailing slashes (Cloudflare Pages enforces them)
const pathname = Astro.url.pathname.endsWith('/') ? Astro.url.pathname : Astro.url.pathname + '/';
const canonicalUrl = `https://getmediatools.com${pathname}`;
const fullOgImage = ogImage.startsWith('http') ? ogImage : `https://getmediatools.com${ogImage}`;

// Generate BreadcrumbList schema from URL path
const pathSegments = pathname.split('/').filter(Boolean);
const BREADCRUMB_LABELS: Record<string, string> = {
    'tiktok-downloader': 'TikTok Downloader',
    'twitter-downloader': 'Twitter/X Downloader',
    'facebook-downloader': 'Facebook Downloader',
    'tiktok-sound-downloader': 'TikTok Sound Downloader',
    'video-to-mp3': 'Video to MP3',
    'thumbnail-grabber': 'Thumbnail Grabber',
    'blog': 'Blog',
};

const breadcrumbItems = [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://getmediatools.com/" }
];

let breadcrumbPath = '';
pathSegments.forEach((segment, index) => {
    breadcrumbPath += `/${segment}`;
    breadcrumbItems.push({
        "@type": "ListItem",
        "position": index + 2,
        "name": BREADCRUMB_LABELS[segment] || segment.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' '),
        "item": `https://getmediatools.com${breadcrumbPath}/`
    });
});

const breadcrumbSchema = pathSegments.length > 0 ? {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": breadcrumbItems
} : null;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <HreflangTags />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="robots" content="index, follow" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="manifest" href="/manifest.json" />
        <meta name="theme-color" content="#ffffff" />
        
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
        <style>@font-face { font-family: 'Inter'; font-display: swap; }</style>
        
        <!-- SEO -->
        <link rel="canonical" href={canonicalUrl} />
        <meta name="yandex-verification" content="cdcc6f25a321137f" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:image" content={fullOgImage} />
        <meta property="og:site_name" content="MediaTools" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={fullOgImage} />

        <title>{title}</title>

        <!-- JSON-LD Structured Data -->
        {jsonLd && (
            <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
        )}
        {breadcrumbSchema && (
            <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
        )}
        
        <!-- Google Analytics -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7GYZ72XSW7"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-7GYZ72XSW7');
        </script>
        
        <!-- Yandex.Metrika counter -->
        <script is:inline type="text/javascript">
            (function(m,e,t,r,i,k,a){
                m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
