---
import '../styles/globals.css';

interface Props {
    title?: string;
    description?: string;
}

const { 
    title = "MediaTools - Download Videos, Extract Audio & More",
    description = "Free online tools to download videos, extract audio, and more from TikTok, YouTube, Twitter, and Facebook."
} = Astro.props;

// Ensure canonical URLs always have trailing slashes (Cloudflare Pages enforces them)
const pathname = Astro.url.pathname.endsWith('/') ? Astro.url.pathname : Astro.url.pathname + '/';
const canonicalUrl = `https://getmediatools.com${pathname}`;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="manifest" href="/manifest.json" />
        <meta name="theme-color" content="#ffffff" />
        
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
        
        <!-- SEO -->
        <link rel="canonical" href={canonicalUrl} />
        <meta name="yandex-verification" content="cdcc6f25a321137f" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalUrl} />
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />

        <title>{title}</title>
        
        <!-- Google Analytics -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7GYZ72XSW7"></script>
        <script is:inline>
